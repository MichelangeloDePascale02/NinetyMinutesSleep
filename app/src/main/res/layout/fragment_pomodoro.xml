<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.pomodoro.PomodoroFragment"
    android:orientation="vertical">

    <com.swdp31plus.ninetyminutessleep.ui.customviews.SemiCircleView
        android:id="@+id/semiCircleView"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startPomodoroButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/baseline_play_circle_24"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_weight="1"
            android:text="@string/start_pomodoro"/>

        <Button
            android:id="@+id/stopPomodoroButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:drawableLeft="@drawable/baseline_replay_circle_filled_24"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_weight="1"
            android:text="@string/reset_pomodoro"/>

    </LinearLayout>

</LinearLayout>